{
  "name": "aria-ui-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run build:packages && bun run build:tsc && bun run build:readme",
    "build:readme": "bun run scripts/build-readme.ts",
    "build:packages": "turbo run build",
    "build:tsc": "tsc -b .",
    "fix": "bun run fix:tsconfig && bun run fix:prettier && bun run fix:biome && bun run fix:eslint",
    "fix:biome": "biome check --apply-unsafe .",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier -w .",
    "fix:tsconfig": "update-ts-references",
    "lint": "bun run lint:ts && bun run lint:prettier && bun run lint:biome && bun run lint:eslint",
    "lint:biome": "biome check .",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:ts": "tsc -b .",
    "release": "pnpm publish -r --dry-run"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@changesets/cli": "^2.27.1",
    "@ocavue/eslint-config": "^1.4.3",
    "@types/bun": "^1.0.7",
    "eslint": "^8.57.0",
    "lefthook": "^1.6.1",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typedoc": "^0.25.8",
    "typedoc-plugin-markdown": "4.0.0-next.53",
    "typescript": "^5.0.0",
    "update-ts-references": "^3.2.1"
  }
}
