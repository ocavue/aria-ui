{
  "name": "aria-ui-monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "build": "pnpm run build:packages && pnpm run build:tsc",
    "build:packages": "turbo run build",
    "build:tsc": "tsc -b .",
    "gen": "bun run scripts/gen-element.ts && bun run scripts/gen-readme.ts",
    "fix": "pnpm run fix:tsconfig && pnpm run fix:prettier && pnpm run fix:biome && pnpm run fix:eslint",
    "fix:biome": "biome check --apply-unsafe .",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier -w .",
    "fix:tsconfig": "update-ts-references",
    "lint": "pnpm run lint:ts && pnpm run lint:prettier && pnpm run lint:biome && pnpm run lint:eslint",
    "lint:biome": "biome check .",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:ts": "tsc -b .",
    "change": "changeset",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "ci:publish": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@changesets/cli": "^2.27.1",
    "@happy-dom/global-registrator": "^14.3.3",
    "@ocavue/eslint-config": "^1.4.3",
    "@types/bun": "^1.0.8",
    "aria-ui-typedoc-plugin": "workspace:*",
    "change-case": "^5.4.3",
    "eslint": "^8.57.0",
    "lefthook": "^1.6.4",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typedoc": "^0.25.9",
    "typedoc-plugin-markdown": "4.0.0-next.53",
    "typescript": "^5.3.3",
    "update-ts-references": "^3.2.1"
  }
}
