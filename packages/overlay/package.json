{
  "name": "@aria-ui/overlay",
  "type": "module",
  "version": "0.0.25",
  "private": false,
  "description": "A collection of web components for building accessible overlays",
  "license": "MIT",
  "funding": "https://github.com/sponsors/ocavue",
  "homepage": "https://github.com/ocavue/aria-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ocavue/aria-ui.git",
    "directory": "packages/overlay"
  },
  "bugs": {
    "url": "https://github.com/ocavue/aria-ui/issues"
  },
  "sideEffects": [
    "./dist/index.js",
    "./src/index.ts"
  ],
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./elements": "./src/elements.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup"
  },
  "dependencies": {
    "@aria-ui/core": "workspace:^",
    "@floating-ui/dom": "^1.7.3",
    "@floating-ui/utils": "^0.2.10",
    "@zag-js/dom-query": "^1.21.6"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./elements": {
        "types": "./dist/elements.d.ts",
        "import": "./dist/elements.js"
      }
    }
  }
}
